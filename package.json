  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "@clerk/express": "^1.7.72",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cors": "^2.8.6",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "pg": "^8.18.0",
    "rss-parser": "^3.13.0",

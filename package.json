{
  "name": "neuralpulse-mcp",
  "version": "1.0.0",
  "description": "Personalized content feed served through any AI assistant via MCP",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:server": "tsx src/server.ts",
    "start": "node dist/server.js",
    "briefing": "tsx src/briefing.ts",
    "build:mcpb": "tsc -p tsconfig.mcpb.json",
    "pack:mcpb": "npm run build:mcpb && mcpb pack",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manifoldhiker/neuralpulse-mcp.git"
  },
